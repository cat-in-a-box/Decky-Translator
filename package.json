{
  "name": "decky-translator",
  "version": "0.5.0",
  "description": "Translate anything on your screen to your language",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:zip": "npm run build && node scripts/build-zip.js",
    "copy-to-deck": "node scripts/copy-to-deck.js",
    "build:zip and copy-to-deck": "npm run build:zip && npm run copy-to-deck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cat-in-a-box/decky-translator.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "translation",
    "language-learning",
    "steam-deck",
    "deck"
  ],
  "author": "cat-in-a-box",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/cat-in-a-box/decky-translator/issues"
  },
  "homepage": "https://github.com/cat-in-a-box/decky-translator",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "16.14.0",
    "@types/react-dom": "^19.1.2",
    "@types/webpack": "^5.28.0",
    "bestzip": "^2.2.1",
    "node-scp": "^0.0.25",
    "rollup": "^2.77.1",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@decky/ui": "^4.11.1",
    "decky-frontend-lib": "^3.24.5",
    "qrcode.react": "^4.2.0",
    "react-dom": "^19.1.0",
    "react-icons": "^4.4.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
