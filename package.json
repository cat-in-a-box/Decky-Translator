{
  "name": "decky-translator",
  "version": "0.7.2",
  "type": "module",
  "description": "Translate anything on your screen to your language",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:deck": "wsl -e sh -c \"rm -rf out node_modules && ./cli/decky plugin build . -o ./out\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cat-in-a-box/decky-translator.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "translation",
    "language-learning",
    "steam-deck",
    "deck"
  ],
  "author": "cat-in-a-box",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/cat-in-a-box/decky-translator/issues"
  },
  "homepage": "https://github.com/cat-in-a-box/decky-translator",
  "devDependencies": {
    "@decky/api": "^1.1.3",
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.11.1",
    "@types/react": "16.14.0",
    "@types/react-dom": "^19.1.2",
    "@types/webpack": "^5.28.0",
    "rollup": "^4.24.0",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "qrcode.react": "^4.2.0",
    "react-icons": "^4.4.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "remote_binary": [
    {
      "name": "plugin-dependencies.tar.gz",
      "url": "https://github.com/cat-in-a-box/Decky-Translator/releases/download/__VERSION__/plugin-dependencies.tar.gz",
      "sha256hash": "__SHA256__"
    }
  ]
}
